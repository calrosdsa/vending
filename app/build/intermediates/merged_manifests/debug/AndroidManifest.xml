<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcn.sdk.springdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 添加访问手机位置的权限 Add access to phone location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 添加访问手机状态的权限  Add access to phone status -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 允许CWJ账户组访问底层信息  Allow CWJ account groups to access underlying information -->
    <uses-permission android:name="android.permission.CWJ_GROUP" >
    </uses-permission>

    <!-- 允许mTweak用户访问高级系统权限  Allow mTweak users to access advanced system permissions -->
    <uses-permission android:name="android.permission.MTWEAK_USER" />

    <!-- 允许声波支付权限  Allow Sonic payment permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="controller.VendApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name="com.tcn.sdk.springdemo.presentation.ComposeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.MenuActivity"
            android:configChanges="locale|keyboardHidden|orientation" />
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.LogActivity"
            android:configChanges="locale|keyboardHidden|orientation" />
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.MenuSettingsLatticeActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:launchMode="singleTask" />
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.MenuSettingsStandJsActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:launchMode="singleTask" />
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.MainAct"
            android:configChanges="locale|keyboardHidden|orientation"
            android:launchMode="singleTask" />
        <activity
            android:name="com.tcn.sdk.springdemo.presentation.SerialPortSetting"
            android:configChanges="locale|keyboardHidden|orientation"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.tcn.sdk_auth_lib.floatwindow.FloatActivity"
            android:configChanges="locale|keyboardHidden|orientation"
            android:launchMode="singleTask" >
        </activity>

        <receiver android:name="controller.BootBroadcastReceiver" >
            <intent-filter android:priority="999" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="controller.VendService" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>